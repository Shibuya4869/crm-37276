<h2>ユーザー登録</h2>

<%= form_with model: @user, url: user_registration_path, local: true, class:"form-new" do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <%= f.label :nickname, "ユーザー名", class:"form-label" %>
  <%= f.text_field :nickname, autofocus: true %>

  <div class="field">
    <%= f.label :email, "メールアドレス", class:"form-label" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password, "パスワード(#{@minimum_password_length}文字以上)", class:"form-label" %>
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, "パスワード再入力", class:"form-label" %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "登録", class:"form-btn" %>
  </div>
<% end %>
