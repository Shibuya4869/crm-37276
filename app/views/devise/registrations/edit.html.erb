<h2>ユーザー情報編集</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class:"form-edit" }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

<div class="field">
    <%= f.label :nickname, "ユーザー名", class:"form-label" %>
    <%= f.text_field :nickname %>
  </div>

  <div class="field">
    <%= f.label :email, "メールアドレス", class:"form-label" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <%= f.label :password, "新しいパスワード(#{@minimum_password_length}文字以上)", class:"form-label" %>
    <%= f.password_field :password, placeholder: "変更したい場合" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, "新しいパスワード（再入力）", class:"form-label" %>
    <%= f.password_field :password_confirmation, placeholder: "変更したい場合" %>
  </div>

  <div class="field">
    <%= f.label :current_password, "現在のパスワード", class:"form-label" %>
    <%= f.password_field :current_password, autocomplete: "current-password" %>
  </div>

  <div class="actions">
    <%= f.submit "更新", class:"form-btn" %>
  </div>
<% end %>
