<h1>契約情報登録</h1>

<%= form_with model: [@prospect, @order], local: true, class:"form-new" do |f| %>
  <%= f.label :service_id, "サービス名", class:"form-label" %>
  <%= f.collection_select(:service_id, Service.all, :id, :name, selected: @prospect.service.id ) %>
  <%= f.label :client_id, "顧客名", class:"form-label" %>
  <%= f.collection_select(:client_id, Client.all, :id, :name, selected: @prospect.client.id) %>
  <%= f.label :user_id, "担当営業", class:"form-label" %>
  <%= f.collection_select(:user_id, User.all, :id, :nickname, selected: @prospect.user.id) %>
  <%= f.label :order_date, "契約日", class:"form-label" %>
  <%= f.date_field :order_date, value: @prospect.scheduled_order_date %>
  <%= f.label :expiry, "契約満了日", class:"form-label" %>
  <%= f.date_field :expiry %>
  <%= f.label :license, "ライセンス数", class:"form-label" %>
  <%= f.number_field :license, value: @prospect.license %>
  <%= f.label :note, "備考", class:"form-label" %>
  <%= f.text_area :note, class:"form-note" %>
  <% f.text_area :prospect_id, value: @prospect.id %>
  <%= f.submit "登録", class:"form-btn" %>
<% end %>
