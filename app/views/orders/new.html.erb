<h1>orders/new</h1>

<%= form_with model: [@prospect, @order], local: true do |f| %>
  <% f.label :service_id, "サービス名" %>
  <%#= f.text_area :service_id, value: @prospect.service.id %>
  <%= f.collection_select(:service_id, Service.all, :id, :name, selected: @prospect.service.id ) %>
  <br>
  <%= f.label :client_id, "顧客名" %>
  <%#= f.text_area :client_id, value: @prospect.client.id %>
  <%= f.collection_select(:client_id, Client.all, :id, :name, selected: @prospect.client.id) %>
  <br>
  <%= f.label :user_id, "担当営業" %>
  <%#= f.text_area :user_id, value: @prospect.user.id %>
  <%= f.collection_select(:user_id, User.all, :id, :nickname, selected: @prospect.user.id) %>
  <br>
  <%= f.label :order_date, "契約日" %>
  <%= f.date_field :order_date, value: @prospect.scheduled_order_date %>
  <br>
  <%= f.label :expiry, "契約満了日" %>
  <%= f.date_field :expiry %>
  <br>
  <%= f.label :license, "ライセンス数" %>
  <%= f.number_field :license, value: @prospect.license %>
  <br>
  <%= f.label :note, "備考" %>
  <%= f.text_area :note %>
  <% f.text_area :prospect_id, value: @prospect.id %>
  <br>
  <%= f.submit %>
<% end %>
