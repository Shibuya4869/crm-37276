<%= render "shared/header" %>

<h1>orders/new</h1>

<%= form_with model: @order, local: true do |f| %>
  <%= f.label :service_id, "サービス名" %>
  <%= f.collection_select(:service_id, Service.all, :id, :name, selected: 1) %>
  <br>
  <%= f.label :client_id, "顧客名" %>
  <%= f.collection_select(:client_id, Client.all, :id, :name, prompt: "選択してください") %>
  <br>
  <%= f.label :user_id, "担当営業" %>
  <%= f.collection_select(:user_id, User.all, :id, :nickname, prompt: "選択してください") %>
  <br>
  <%= f.label :order_date, "契約日" %>
  <%= f.date_field :order_date %>
  <br>
  <%= f.label :expiry, "契約満了日" %>
  <%= f.date_field :expiry %>
  <br>
  <%= f.label :license, "ライセンス数" %>
  <%= f.number_field :license %>
  <br>
  <%= f.label :note, "備考" %>
  <%= f.text_area :note %>
  <br>
  <%= f.submit %>
<% end %>
