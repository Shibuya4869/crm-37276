<%= render "shared/header" %>

<h1>orders/index</h1>
<%#= link_to "契約情報登録", new_prospect_order_path %>

<br>
<% if @orders == [] %>
  <p>契約情報が登録されていません</p>
<% else %>
  <% @orders.each do |order| %>
    <%= link_to "編集", edit_order_path(order.id) %>
    <%= order.client.name %>
    <%= order.service.name %>
    <%= order.user.nickname %>
    <%= order.service.price * order.license %>
    <%= order.order_date %>
    <%= order.expiry %>
    <%= order.license %>
    <%= order.note %>
    <br>
  <% end %>
<% end %>
