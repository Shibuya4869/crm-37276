<%= render "shared/header" %>

<h1>services/index</h1>
<%= link_to "サービス（商品）登録", new_service_path %>

<br><br>
<% if @services == [] %>
  <p>サービス（商品）が登録されていません</p>
<% else %>
  <% @services.each do |service| %>
    <%= link_to "編集", edit_service_path(service.id) %>
    <%= service.name %>
    <%= service.price %>
    <br>
  <% end %>
<% end %>
