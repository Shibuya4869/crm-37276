<h2>顧客情報一覧</h2>
<%= link_to "顧客登録", new_client_path, class:"new-data-btn" %>

<% if @clients == [] %>
  <p>顧客が登録されていません</p>
<% else %>
  <table>
    <tr class="table-subject">
    <th></th>
    <th></th>
    <th>顧客名</th>
    <th>電話番号</th>
    <th>メールアドレス</th>
    </tr>
  <% @clients.each do |client| %>
    <tr>
    <td><%= link_to "編集", edit_client_path(client.id) %></td>
    <td><%= link_to "削除", client_path(client.id), method: :delete %></td>
    <td class="td-client"><%= client.name %></td>
    <td class="td-phone"><%= client.phone %></td>
    <td class="td-mail"><%= client.address %></td>
    </tr>
  <% end %>
  </table>
<% end %>
