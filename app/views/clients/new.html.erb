<h2>顧客登録</h2>

<%= form_with model: @client, local: true, class:"form-new" do |f| %>
  <%= f.label :name, "顧客名", class:"form-label" %>
  <%= f.text_field :name %>
  <%= f.label :phone, "電話番号", class:"form-label" %>
  <%= f.text_field :phone %>
  <%= f.label :address, "メールアドレス", class:"form-label" %>
  <%= f.text_field :address %>
  <%= f.submit "登録", class:"form-btn" %>
<% end %>
